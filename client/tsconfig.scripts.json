{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "noEmit": true
  },
  "include": ["src", "src/types"]
}
