{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jest/recommended"
  ],
  "plugins": [
    "react",
    "react-hooks",
    "jest",
    "spellcheck"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "max-len": ["warn", 120],
    "no-eval": "error",
    "quotes": ["warn", "double", { "allowTemplateLiterals": true, "avoidEscape": true }],
    "no-unused-vars": ["warn", { "vars": "all", "args": "none", "ignoreRestSiblings": false }],
    "no-console": "warn",
    "react/prop-types": "off",
    "curly": ["warn", "multi-or-nest", "consistent"],
    "react/jsx-indent": ["warn", 2],
    "indent" : ["warn", 2, { "ignoredNodes": ["TemplateLiteral"], "SwitchCase": 1 }],
    "semi": ["warn", "always"],
    "space-before-blocks": ["warn", "always"],
    "no-multi-spaces": "warn",
    "brace-style": ["warn", "stroustrup", { "allowSingleLine": true }],
    "max-nested-callbacks": ["warn", 3],
    "no-alert": "error",
    "no-else-return": "warn",
    "jest/expect-expect": "off",
    "comma-spacing": "warn",
    "block-spacing": ["warn", "always"],
    "key-spacing": "warn",
    "no-trailing-spaces": "warn",
    "object-curly-spacing": ["warn", "always"],
    "space-infix-ops": "warn",
    "space-unary-ops": ["warn", {"words": true, "nonwords": false}],
    "keyword-spacing": ["warn", { "before": true }],
    "no-multiple-empty-lines": ["warn", { "max": 2, "maxEOF": 1 }],
    "no-unsafe-finally": "off",
    "react/jsx-curly-spacing": ["warn", "never"],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "spellcheck/spell-checker": [
      "warn", {
        "identifiers": true,
        "comments": true,
        "strings": true,
        "minLength": 4,
        "skipIfMatch": [
          // Careful! This skips the entire JS node, better to avoid it.
        ],
        "skipWordIfMatch": [
          "http(s)?://[^s]*", // url
          "0x[0-9a-fx]{2,16}", // hex
          "[0-9a-f]{4,32}" // commit sha (7/8/32) and zenodo sub-identifiers (4-12)
        ],
        "skipWords": [
          "accessor",
          "ascii",
          "autosave",
          "autosaved",
          "autosuggest",
          "backend",
          "bool",
          "cancellable",
          "cancelled",
          "checkbox",
          "ckeditor",
          "cktextarea",
          "codemirror",
          "dagre",
          "dataset",
          "datasets",
          "dataverse",
          "datetime",
          "discoverability",
          "dropdown",
          "enum",
          "formgenerator",
          "fortran",
          "frontend",
          "gitlab",
          "gitter",
          "graphlib",
          "graphql",
          "grayscale",
          "hljs",
          "href",
          "iids",
          "interruptable",
          "ipynb",
          "ipython",
          "javascript",
          "jpeg",
          "jumbotron",
          "jupyter",
          "kernelspec",
          "localhost",
          "maintenances",
          "mergerequests",
          "mongodb",
          "monospace",
          "mouseout",
          "mouseover",
          "multiline",
          "mustermann",
          "namespace",
          "namespaces",
          "nbconvert",
          "nbformat",
          "noopener",
          "noreferrer",
          "nowrap",
          "nullable",
          "papermill",
          "pathname",
          "poller",
          "presentational",
          "pygments",
          "react",
          "readme",
          "rect",
          "redux",
          "renderer",
          "renku",
          "replacer",
          "repo",
          "repos",
          "reproducibility",
          "reusability",
          "rproj",
          "rstudio",
          "scala",
          "selectautosuggest",
          "serializable",
          "shareability",
          "slugify",
          "starrers",
          "statuspage",
          "stdout",
          "telepresence",
          "textarea",
          "thead",
          "toastify",
          "toggler",
          "toml",
          "tooltip",
          "tspan",
          "uncompress",
          "unicode",
          "unmount",
          "unschedulable",
          "unstar",
          "uploadable",
          "uploader",
          "urls",
          "validators",
          "visibilities",
          "webhook",
          "webhooks",
          "whitespace",
          "yaml",
          "zenodo"
        ]
      }
    ]
  }
}
