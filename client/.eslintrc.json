{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:jest/recommended"
  ],
  "plugins": [
    "react",
    "react-hooks",
    "jest",
    "spellcheck"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "max-len": [
      "warn",
      120
    ],
    "no-eval": "error",
    "quotes": [
      "warn",
      "double",
      {
        "allowTemplateLiterals": true,
        "avoidEscape": true
      }
    ],
    "no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "none",
        "ignoreRestSiblings": false
      }
    ],
    "no-console": "warn",
    "react/prop-types": "off",
    "curly": [
      "warn",
      "multi-or-nest",
      "consistent"
    ],
    "react/jsx-indent": [
      "warn",
      2
    ],
    "indent": [
      "warn",
      2,
      {
        "ignoredNodes": [
          "TemplateLiteral"
        ],
        "SwitchCase": 1
      }
    ],
    "semi": [
      "warn",
      "always"
    ],
    "space-before-blocks": [
      "warn",
      "always"
    ],
    "no-multi-spaces": "warn",
    "brace-style": [
      "warn",
      "stroustrup",
      {
        "allowSingleLine": true
      }
    ],
    "max-nested-callbacks": [
      "warn",
      3
    ],
    "no-alert": "error",
    "no-else-return": "warn",
    "jest/expect-expect": "off",
    "comma-spacing": "warn",
    "block-spacing": [
      "warn",
      "always"
    ],
    "key-spacing": "warn",
    "no-trailing-spaces": "warn",
    "object-curly-spacing": [
      "warn",
      "always"
    ],
    "space-infix-ops": "warn",
    "space-unary-ops": [
      "warn",
      {
        "words": true,
        "nonwords": false
      }
    ],
    "keyword-spacing": [
      "warn",
      {
        "before": true
      }
    ],
    "no-multiple-empty-lines": [
      "warn",
      {
        "max": 2,
        "maxEOF": 1
      }
    ],
    "eol-last": 1,
    "no-unsafe-finally": "off",
    "react/jsx-curly-spacing": [
      "warn",
      "never"
    ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "spellcheck/spell-checker": [
      "warn",
      {
        "identifiers": true,
        "comments": true,
        "strings": true,
        "minLength": 4,
        "skipIfMatch": [
          // Careful! This skips the entire JS node, better to avoid it.
        ],
        "skipWordIfMatch": [
          "http(s)?://[^s]*", // url
          "0x[0-9a-fx]{2,16}", // hex
          "[0-9a-f]{4,32}" // commit sha (7/8/32) and zenodo sub-identifiers (4-12)
        ],
        "skipWords": [
          "accessor",
          "allowfullscreen",
          "ascii",
          "asciimath",
          "autosave",
          "autosaved",
          "autosaves",
          "autostart",
          "autosuggest",
          "backend",
          "bool",
          "cancellable",
          "cancelled",
          "cheatsheet",
          "checkbox",
          "ckeditor",
          "cktextarea",
          "cloudstorage",
          "codemirror",
          "craco",
          "dagre",
          "dataset",
          "datasets",
          "dataverse",
          "datetime",
          "discoverability",
          "dismissible",
          "dropdown",
          "dockerfile",
          "enum",
          "formgenerator",
          "fortran",
          "frameborder",
          "frontend",
          "gitlab",
          "gitter",
          "graphlib",
          "graphql",
          "grayscale",
          "hljs",
          "href",
          "iframe",
          "iids",
          "interruptable",
          "integrations",
          "ipynb",
          "ipython",
          "javascript",
          "jpeg",
          "jumbotron",
          "jupyter",
          "katex",
          "kernelspec",
          "Lausanne",
          "localhost",
          "maintenances",
          "mathbf",
          "mergerequests",
          "mongodb",
          "monospace",
          "mouseout",
          "mouseover",
          "multiline",
          "multipart",
          "mustermann",
          "namespace",
          "namespaces",
          "nbconvert",
          "nbformat",
          "noopener",
          "noreferrer",
          "nowrap",
          "nullable",
          "onloadend",
          "papermill",
          "pathname",
          "pdfjs",
          "poller",
          "popups",
          "prepend",
          "presentational",
          "profiler",
          "Pupikofer",
          "pygments",
          "react",
          "readme",
          "Ravey",
          "rect",
          "redux",
          "renderer",
          "renku",
          "replacer",
          "repo",
          "repos",
          "reproducibility",
          "reusability",
          "rproj",
          "rstudio",
          "scala",
          "selectautosuggest",
          "serializable",
          "shareability",
          "slugify",
          "starrers",
          "statuspage",
          "stdout",
          "tada",
          "telepresence",
          "textarea",
          "thead",
          "toastify",
          "toggler",
          "toml",
          "tooltip",
          "tspan",
          "uiserver",
          "uncompress",
          "unicode",
          "unmount",
          "unschedulable",
          "unstar",
          "uploadable",
          "uploader",
          "urls",
          "validators",
          "versioned",
          "visibilities",
          "webhook",
          "webhooks",
          "webpack",
          "whitespace",
          "wip",
          "yaml",
          "zenodo"
        ]
      }
    ]
  }
}
