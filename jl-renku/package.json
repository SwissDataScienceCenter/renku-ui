{
  "name": "jl-renku",
  "version": "0.1.0",
  "description": "A JupyterLab extension for Renku.",
  "keywords": [
    "jupyter",
    "jupyterlab",
    "jupyterlab-extension"
  ],
  "homepage": "hhttps://github.com/SwissDataScienceCenter/renku-ui",
  "bugs": {
    "url": "hhttps://github.com/SwissDataScienceCenter/renku-ui/issues"
  },
  "license": "BSD-3-Clause",
  "author": "Swiss Data Science Center",
  "files": [
    "lib/**/*.{d.ts,eot,gif,html,jpg,js,js.map,json,png,svg,woff2,ttf}",
    "style/**/*.{css,eot,gif,html,jpg,json,png,svg,woff2,ttf}"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "style": "style/index.css",
  "repository": {
    "type": "git",
    "url": "hhttps://github.com/SwissDataScienceCenter/renku-ui.git"
  },
  "scripts": {
    "build": "jlpm run build:lib && jlpm run build:labextension:dev",
    "build:prod": "jlpm run build:lib && jlpm run build:labextension",
    "build:labextension": "jupyter labextension build .",
    "build:labextension:dev": "jupyter labextension build --development True .",
    "build:lib": "tsc",
    "clean": "jlpm run clean:lib",
    "clean:lib": "rimraf lib tsconfig.tsbuildinfo",
    "clean:labextension": "rimraf jl-renku/labextension",
    "clean:all": "jlpm run clean:lib && jlpm run clean:labextension",
    "eslint": "eslint . --ext .ts,.tsx --fix",
    "eslint:check": "eslint . --ext .ts,.tsx",
    "install:extension": "jupyter labextension develop --overwrite .",
    "prepare": "jlpm run clean && jlpm run build:prod",
    "watch": "run-p watch:src watch:labextension",
    "watch:src": "tsc -w",
    "watch:labextension": "jupyter labextension watch ."
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.13",
    "@jupyterlab/application": "^2.2.6",
    "@jupyterlab/apputils": "^2.2.6",
    "@jupyterlab/coreutils": "^5.0.0-rc.2",
    "@jupyterlab/mainmenu": "^2.2.4",
    "@jupyterlab/services": "^6.0.0-rc.2",
    "@jupyterlab/translation": "^3.0.0-beta.8",
    "@jupyterlab/ui-components": "^2.0.0",
    "@lumino/widgets": "^1.14.1",
    "react-clipboard.js": "^2.0.16"
  },
  "devDependencies": {
    "@jupyterlab/builder": "^3.0.0-rc.2",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-spellcheck": "0.0.17",
    "mkdirp": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.0",
    "rimraf": "^3.0.2",
    "typescript": "~4.0.3"
  },
  "sideEffects": [
    "style/*.css"
  ],
  "jupyterlab": {
    "discovery": {
      "server": {
        "managers": [
          "pip"
        ],
        "base": {
          "name": "jl-renku"
        }
      }
    },
    "extension": true,
    "outputDir": "jl-renku/labextension"
  }
}
